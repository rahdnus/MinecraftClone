{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                
				"${workspaceRoot}/dependencies/GLAD/src/glad.c",
				"${workspaceRoot}/src/**.cpp",
				// "${workspaceRoot}/src/core/**.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I${workspaceRoot}/dependencies",
                "-I${workspaceRoot}/dependencies/GLAD/include",
                "-I${workspaceRoot}/dependencies/GLFW/include",
                "-lopengl32",
				"-static",
				"-lglfw3dll",
				"-L${workspaceRoot}/dependencies/GLFW/lib-mingw",
				 "-lglfw3",
                 "-lopengl32",

				"-o",
				"${workspaceRoot}/Builds/main"	
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}